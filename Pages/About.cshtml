@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="row">
    <div class="col-md-12">
        <h2>About this application</h2>
        <p class="lead">This application demonstrates a Razor Pages architecture using ASP.NET Core.</p>
        
        <div class="row mt-4">
            <div class="col-md-6">
                <h4>Features</h4>
                <ul>
                    <li>Server-side rendering with Razor Pages</li>
                    <li>MVC-style project structure</li>
                    <li>Bootstrap for responsive design</li>
                    <li>Static file serving</li>
                    <li>Form handling capabilities</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h4>Technology Stack</h4>
                <ul>
                    <li><strong>Runtime:</strong> .NET 8</li>
                    <li><strong>Framework:</strong> ASP.NET Core</li>
                    <li><strong>Templating:</strong> Razor Pages</li>
                    <li><strong>Styling:</strong> Bootstrap 5</li>
                </ul>
            </div>
        </div>
    </div>
</div>
