<div class="login-container">
    <div class="login-card">
        <!-- Logo -->
        <div class="logo-container">
            <img src="/images/logo.png" alt="Logo" class="login-logo">
        </div>
        
        <!-- Title -->
        <h2 class="login-title">Sign in to StubHub</h2>
        
        <!-- Login Form -->
        <form class="login-form" action="/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required>
            </div>
            
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            
            <div class="form-check-container">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="stayLoggedIn" name="stayLoggedIn">
                    <label class="form-check-label" for="stayLoggedIn">Stay logged in</label>
                </div>
                <a href="/forgot-password" class="forgot-password-link">Forgot Password</a>
            </div>
            
            <button type="submit" class="btn btn-primary btn-signin">Sign in</button>
            
            <div class="privacy-notice">
                By signing in or creating an account, you acknowledge and accept our <a href="/privacy" class="privacy-link">privacy policy</a>
            </div>
        </form>
        
        <!-- Social Login Buttons -->
        <div class="social-login">
            <button type="button" class="btn btn-facebook">
                <img src="/images/facebook.png" alt="Facebook" class="social-icon">
                Log In with Facebook
            </button>
            
            <button type="button" class="btn btn-apple">
                <img src="/images/apple.png" alt="Apple" class="social-icon">
                Sign in with Apple
            </button>
        </div>
        
        <!-- Create Account Link -->
        <div class="create-account">
            New to StubHub? <a href="/register" class="create-account-link">Create account</a>
        </div>
    </div>
</div>
